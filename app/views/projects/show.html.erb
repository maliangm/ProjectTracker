<h2><%= @project.name %></h2>
<%= link_to "Edit Project", edit_project_path(@project) %>
<%= link_to "Delete Project", @project, :method => :delete, :confirm => "Are you sure want to delete this project?" %>

<hr />
<%= link_to "Create Ticket", new_project_ticket_path(@project) %>
<div id="tickets">
  <table>
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
    <% @project.tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.id %></td>
        <td><%= link_to ticket.title, [@project, ticket] %></td>
      </tr>
    <% end %>
  </table>
</div>